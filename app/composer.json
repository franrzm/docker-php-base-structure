{
  "name": "franrzm/php-base-structure",
  "require-dev": {
    "phpunit/phpunit": "^9.6"
  },
  "authors": [
    {
      "name": "Francisco Ruiz",
      "email": "franciscoruiz5298@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "ramsey/uuid": "^4.7",
    "ext-pgsql": "*",
    "vlucas/phpdotenv": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "config": {
    "optimize-autoloader": true
  },
  "prefer-stable": true,
  "scripts": {
    "test": "phpunit --configuration phpunit.xml"
  }
}
